    "links": [],
    "liveNow": false,
    "panels": [
        {
            "title": "üìä Requests Per Second",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "rate(aegis_requests_total[1m])",
                    "legendFormat": "Total Requests/s",
                    "refId": "A"
                },
                {
                    "expr": "rate(aegis_allowed_total[1m])",
                    "legendFormat": "Allowed/s",
                    "refId": "B"
                },
                {
                    "expr": "rate(aegis_blocked_total[1m])",
                    "legendFormat": "Blocked/s",
                    "refId": "C"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 10
                    },
                    "unit": "reqps"
                }
            }
        },
        {
            "title": "üö´ Block Rate",
            "type": "gauge",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 12,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "rate(aegis_blocked_total[5m]) / rate(aegis_requests_total[5m]) * 100",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 5
                            },
                            {
                                "color": "orange",
                                "value": 15
                            },
                            {
                                "color": "red",
                                "value": 30
                            }
                        ]
                    },
                    "max": 100
                }
            }
        },
        {
            "title": "‚è±Ô∏è Decision Latency (p95)",
            "type": "gauge",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 18,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, rate(aegis_decision_duration_seconds_bucket[5m])) * 1000",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ms",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 10
                            },
                            {
                                "color": "orange",
                                "value": 25
                            },
                            {
                                "color": "red",
                                "value": 50
                            }
                        ]
                    },
                    "max": 100
                }
            }
        },
        {
            "title": "üõ°Ô∏è Blocked Requests by Severity",
            "type": "piechart",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "sum by (severity) (aegis_blocked_total)",
                    "legendFormat": "{{severity}}",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "üìç Blocks by Endpoint",
            "type": "barchart",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 8,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "topk(10, sum by (endpoint) (aegis_blocked_total))",
                    "legendFormat": "{{endpoint}}",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "üîë Rule Source Distribution",
            "type": "piechart",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 16,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "sum by (rule_source) (aegis_rule_evaluations_total)",
                    "legendFormat": "{{rule_source}}",
                    "refId": "A"
                }
            ]
        },
        {
            "title": "‚ö° Decision Latency Distribution",
            "type": "histogram",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "rate(aegis_decision_duration_seconds_bucket[5m])",
                    "legendFormat": "{{le}}",
                    "refId": "A",
                    "format": "heatmap"
                }
            ]
        },
        {
            "title": "üíæ Cache Hit Ratio",
            "type": "stat",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 12,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "sum(aegis_cache_accesses_total{result=\"hit\"}) / sum(aegis_cache_accesses_total) * 100",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "red",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 50
                            },
                            {
                                "color": "green",
                                "value": 80
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "üñ•Ô∏è JVM Memory Usage",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 18,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "jvm_memory_used_bytes{area=\"heap\"} / 1024 / 1024",
                    "legendFormat": "Heap Used (MB)",
                    "refId": "A"
                },
                {
                    "expr": "jvm_memory_max_bytes{area=\"heap\"} / 1024 / 1024",
                    "legendFormat": "Heap Max (MB)",
                    "refId": "B"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "decmbytes"
                }
            }
        }
